ProfileEditor {
  display: flex
  div.side {
    margin-right: 10px
  }
  div.main {
    flex: 1
    display: flex
    flex-direction: column
    input {
      border: 1px solid #ccc
      font-size: 150%
      padding: 10px
    }
    textarea {
      resize: vertical
      margin-top: 10px
      border: 1px solid #ccc
      padding: 10px
      font-size: 150%
      flex: 1
    }
  }
}

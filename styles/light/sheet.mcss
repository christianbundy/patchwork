Sheet {
  background: #f8f8f8
  border: 2px solid #9c9a9a
  box-shadow: 0 0 40px rgba(0,0,0,0.5)
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px
  -private {
    footer {
      background-color: #fffbf4
    }
  }
  -public {
    footer {
      border-color: #c7c3ff
      background-color: #f4f4fd
    }
  }
  footer {
    border-top: 1px solid #ddd
  }
}
